<%=form_for :messages, url: url_for( :controller => :brgr, :action => :show ) do |f| %>
    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address %><br>
      <%= f.label :radius %>
      <%= f.select :radius, [['1km',1000],['5km',5000],['10km',10000]] %>
    </div> 

  <div class="actions">
    <%= f.submit %>

<% end %>
